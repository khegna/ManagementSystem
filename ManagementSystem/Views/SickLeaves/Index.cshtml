@model IEnumerable<ManagementSystem.Data.SickLeave>

@{
    ViewBag.Title = "Index";
}
<div style="font-family:Arial">
    <h2>Sick Leave Requests</h2>

    <table  class="display msTable">
        <thead>
        <tr>
            <th>
                Start Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                Approval Status
            </th>
            <th>
                Name
            </th>
            <th>Actions</th>
        </tr>
            </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.StartDate.Value.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApprovalStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FirstName)
                    @Html.DisplayFor(modelItem => item.Employee.LastName)
                </td>
                <td>
                    @if (item.ApprovalStatus == "Approved" || item.ApprovalStatus == "Denied")
                    {
                        <div class="btn-group btn-group-sm">
                            <button type="button" class="btn disabled"> @Html.ActionLink("Details", "Details", new { id = item.SickLeaveId })  </button>
                        </div>

                    }
                    else
                    {
                    <div class="btn-group btn-group-sm">
                        <button type="button" class="btn btn-default"> @Html.ActionLink("Edit Approval Status", "Edit", new { id = item.SickLeaveId }) </button>
                        <button type="button" class="btn btn-default">@Html.ActionLink("Details", "Details", new { id = item.SickLeaveId }) </button>
                    </div>
                    }
                </td>

            </tr>
        }
        </tbody>
    </table>
</div>