@model IEnumerable<ManagementSystem.Data.SickLeave>

@{
    ViewBag.Title = "Index";
}
<div style="font-family:Arial">
    <h2>Sick Leave Requests</h2>
    <br />

    @if (ViewBag.SessionTitle == "Manager")
    {
        <p>
            @using (Html.BeginForm("Index", "SickLeaves", FormMethod.Get))
            {
                <b>Search By</b> @Html.RadioButton("searchBy", "Approval Status", true) <text>Approval Status</text>
                @Html.RadioButton("searchBy", "Last name") <text>Last Name</text>
                @Html.RadioButton("searchBy", "Duration") <text>Duration</text>
                <br />
                @Html.TextBox("search")<input type="submit" value="Search" />
            }
        </p>
    }
    @if (ViewBag.SessionTitle == "Human Resources")
    {
        <p>
            @using (Html.BeginForm("Index", "SickLeaves", FormMethod.Get))
            {
                <b>Search By</b> @Html.RadioButton("searchBy", "Approval Status", true) <text>Approval Status</text>
                @Html.RadioButton("searchBy", "Last name") <text>Last Name</text>
                @Html.RadioButton("searchBy", "Duration") <text>Duration</text>
                @Html.RadioButton("searchBy", "Need HR Approval") <text>Need HR Approval</text>
                <br />
                @Html.TextBox("search")<input type="submit" value="Search" />
            }
        </p>
    }
    <br />
    <table class="table" border="1">
        <tr>
            <th>
                Start Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                Approval Status
            </th>
            <th>
                Name
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.StartDate.Value.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApprovalStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FirstName)
                    @Html.DisplayFor(modelItem => item.Employee.LastName)
                </td>
                <td>
                    @if (item.ApprovalStatus == "Approved" || item.ApprovalStatus == "Denied")
                    {
                        <div class="btn-group btn-group-sm">
                            <button type="button" class="btn disabled"> @Html.ActionLink("Details", "Details", new { id = item.SickLeaveId })  </button>
                        </div>

                    }
                    else
                    {
                    <div class="btn-group btn-group-sm">
                        <button type="button" class="btn btn-default"> @Html.ActionLink("Edit Approval Status", "Edit", new { id = item.SickLeaveId }) </button>
                        <button type="button" class="btn btn-default">@Html.ActionLink("Details", "Details", new { id = item.SickLeaveId }) </button>
                    </div>
                    }
                </td>

            </tr>
        }

    </table>
</div>