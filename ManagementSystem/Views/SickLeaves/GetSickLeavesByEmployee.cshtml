@model IEnumerable<ManagementSystem.Data.SickLeave>

@{
    ViewBag.Title = "GetSickLeavesByEmployee";
}

<h2>My Sick Leave Requests</h2>

<table class="table-condensed">
    <tr>
        <th>
            Start Date
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            Approval Status
        </th>
        <th>
            Name
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.StartDate.Value.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApprovalStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.FirstName)
            @Html.DisplayFor(modelItem => item.Employee.LastName)
        </td>
        <td>
            <div class="btn-group btn-group-sm">
                <button type="button" class="btn disabled"> @Html.ActionLink("Details", "Details", new { id = item.SickLeaveId })   </button>
            </div>
     
        </td>

    </tr>
}

</table>
