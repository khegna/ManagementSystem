@model IEnumerable<ManagementSystem.Data.EmployeeStatu>

@{
    ViewBag.Title = "Index";
}

<h2>Terminated Employees</h2>


<table class="table-condensed">
    <tr>
        <th>
            Name
            </th>

        <th>
            Termination Date
        </th>
        <th>
            Final Date
        </th>

        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Employee.FirstName
            @item.Employee.LastName
        </td>
        <td>
               @item.TreminationDate.Value.ToShortDateString()
             
        </td>
        <td>
            @item.FinalDate.Value.ToShortDateString()
        </td>

        <td>
            <div class="btn-group btn-group-sm">
                <button type="button" class="btn btn-default"> @Html.ActionLink("Details", "Details", new { id = item.EmployeeStatusId })</button>
            </div>
        </td>
    </tr>
}

</table>
